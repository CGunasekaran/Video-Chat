# Socket.io Server URL
# For production: Use your deployed server URL (e.g., https://your-server.onrender.com)
# For local development: Use http://localhost:8000
NEXT_PUBLIC_SOCKET_SERVER_URL=http://localhost:8000

# TURN Server Configuration (Optional - for better connectivity across firewalls)
NEXT_PUBLIC_ENABLE_TURN_SERVERS=false

# Twilio TURN Servers (Optional)
# NEXT_PUBLIC_TWILIO_TURN_USERNAME=
# NEXT_PUBLIC_TWILIO_TURN_CREDENTIAL=

# Metered.ca TURN Servers (Optional)
# NEXT_PUBLIC_METERED_TURN_USERNAME=
# NEXT_PUBLIC_METERED_TURN_CREDENTIAL=

# Custom TURN Server (Optional)
# NEXT_PUBLIC_CUSTOM_TURN_URL=
# NEXT_PUBLIC_CUSTOM_TURN_USERNAME=
# NEXT_PUBLIC_CUSTOM_TURN_CREDENTIAL=
